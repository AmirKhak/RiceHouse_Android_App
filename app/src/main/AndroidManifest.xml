<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.amir.ricehouse">

    <uses-permission
        android:required="true"
        android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".Screen"
            android:parentActivityName=".Welcome">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Welcome" />

        </activity>
        <activity android:name=".Welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Products"
            android:parentActivityName=".Screen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Screen" />

        </activity>
        <activity android:name=".About_Us"
            android:parentActivityName=".Screen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Screen" />

        </activity>
        <activity android:name=".Contact_Us"
            android:parentActivityName=".Screen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Screen" />
        </activity>
    </application>

</manifest>